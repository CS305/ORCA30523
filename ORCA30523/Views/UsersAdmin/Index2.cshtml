@model PagedList.IPagedList<IdentitySample.Models.ApplicationUser>
@using Microsoft.AspNet.Identity
@using IdentitySample.Models
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    IdentitySample.Models.EditUserViewModel editUser = new IdentitySample.Models.EditUserViewModel();
    ViewBag.Title = "Index";
}
<h2 style="color:#079449">All Users</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    Search: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
    <input type="submit" value="Search" />
</p>

<table class="table">
    <tr>
        <th>
            @*@Html.ActionLink("User Email", "Index2", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })*@
            User Email
        </th>
        <th>
            @*@Html.ActionLink("First Name", "Index2", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })*@
            First Name
        </th>
        <th>
            @*@Html.ActionLink("Last Name", "Index2", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })*@
            Last Name
        </th>
        <th>
            @Html.ActionLink("Register", "Index2", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.register)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div style="position: relative;width: 100%; height: 170px; color:#079449">
    <div style="position: absolute; bottom: 5px; color:#079449">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter } ))
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
</div>