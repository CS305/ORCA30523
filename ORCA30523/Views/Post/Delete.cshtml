@model ORCA30523.Models.Post

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<p>
    Are you sure you would like to delete this Message?
</p>
<ul>
    <li>Subject: @Model.Subject</li>
    <li>Description: @Model.Body</li>
</ul>

@using (Html.BeginForm("DoDelete", "Message", FormMethod.Post))
{

    @Html.HiddenFor(m => m.PostID)
    <input type="submit" class="btn btn-danger" value="Yes, Delete it!" />
    @Html.ActionLink("No, back to messages", "Index")
}

